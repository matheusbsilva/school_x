<%= form_tag login_path do %>
  <div class="form-group">
    <%= label_tag 'login', 'Login', class: 'sr-only' %>
    <div class="input-group">
      <span class="input-group-addon fa fa-user"></span>
      <%= text_field_tag('login', nil, placeholder: "Login", class: "form-control", :autofocus => true) %>
    </div>
    <p>
      <small class="text-muted text-lowercase">(somente numeros)</small>
    </p>
  </div>
  <div class="form-group">
    <%= label_tag 'password', 'Senha', class: 'sr-only' %>
    <div class="input-group">
      <span class="input-group-addon fa fa-lock"></span>
      <%= password_field_tag('password', nil, class: 'form-control', placeholder: 'Senha') %>
    </div>
  </div>
  <%= submit_tag "Entrar", class: 'btn btn-block btn-success' %>
<% end %>
